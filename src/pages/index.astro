---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/tutoring-hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/feature-Image.avif";
import onlineTutoring from "@images/online-tutoring.avif";
import personalizedLearning from "@images/personalized-learning.avif";
import subjectExpertise from "@images/subject-expertise.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <!-- <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Book a Free Session!"
    url="/contact"
  /> -->

  <HeroSection
    title=`Unlock Your Potential with <span
        class="text-blue-500 dark:text-blue-400">TutorMe</span>`
    subTitle="Expert tutoring services tailored to your learning needs across all subjects and levels."
    primaryBtn="Explore Subjects"
    primaryBtnURL="/subjects"
    secondaryBtn="Meet Our Tutors"
    secondaryBtnURL="/tutors"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`From Over <span class="font-bold">30</span> Happy Students`
    src={heroImage}
    alt="A student studying with a tutor in a bright, welcoming environment"
  />

  <FeaturesGeneral
    title="Empowering Your Learning Journey"
    subTitle="At TutorMe, we address the unique challenges students face in their academic pursuits. From personalized learning plans to expert subject tutors, we're committed to helping you overcome obstacles and achieve your academic goals."
    src={featureImage}
    alt="TutorMe's learning resources and tools"
    features={features}
  />

  <FeaturesNavs
    title=`Tailor <span class="text-blue-500 dark:text-blue-400">TutorMe</span>'s services to match your specific learning needs.`
    tabs={[
      {
        heading: "Online Tutoring",
        content:
          "Access top-quality education from anywhere with TutorMe's online tutoring platform. Experience interactive lessons, real-time collaboration, and flexible scheduling to fit your lifestyle.",
        svg: "laptop",
        src: onlineTutoring,
        alt: "A student engaged in an online tutoring session",
        first: true,
      },
      {
        heading: "Personalized Learning",
        content:
          "Benefit from TutorMe's adaptive learning algorithms. Our system analyzes your progress and tailors lessons to your unique learning style, ensuring efficient and effective study sessions.",
        svg: "chart",
        src: personalizedLearning,
        alt: "A visual representation of a personalized learning plan",
        second: true,
      },
      {
        heading: "Subject Expertise",
        content:
          "From mathematics to literature, science to languages, TutorMe offers expert tutors across all subjects. Gain deep understanding and excel in your studies with our comprehensive subject coverage.",
        svg: "book",
        src: subjectExpertise,
        alt: "A collage of various academic subjects represented by books and symbols",
      },
    ]}
  />

  <TestimonialsSection
    title="Achieve Academic Excellence"
    subTitle="At TutorMe, we ensure a smooth start with instant matching to the perfect tutor. Experience the power of personalized education."
    testimonials={[
      {
        content:
          "TutorMe transformed my academic performance. The personalized approach and expert tutors helped me grasp complex concepts with ease. My grades improved significantly, and I feel more confident in my studies!",
        author: "Emily Chen",
        role: "High School Student | Grade 11",
        avatarSrc:
          "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "30+",
        description:
          "students empowered â€” from elementary to university level",
      },
      {
        count: "25%",
        description:
          "average grade improvement reported by our students",
      },
      {
        count: "99%",
        description:
          "satisfaction rate among students and parents",
      },
      {
        count: "200+",
        description: "hours of experience tutoring for each tutor",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <!-- <HeroSectionAlt
    title="Join Our Learning Community"
    subTitle="TutorMe is committed to providing accessible, high-quality education to learners worldwide. Start your journey to academic success today."
    url="/get-started"
  /> -->
</MainLayout>